@using organic_store.Models

@{
    string currentMaDM = ViewBag.SelectedMaDM ?? "ALL";
    string currentMaCH = ViewBag.SelectedStore ?? "ALL";
}

@* Gọi Partial View Layout Phân trang và truyền PagerViewModel *@
@Html.Partial("~/Views/Shared/_Layout_Pagination.cshtml", new PagerViewModel
{
    Page = ViewBag.Page,
    PageSize = ViewBag.PageSize,
    TotalCount = ViewBag.TotalCount,
    DisplayPages = 5,
    ActionName = "Index",
    RouteValues = new { maCH = currentMaCH, maDM = currentMaDM }
})