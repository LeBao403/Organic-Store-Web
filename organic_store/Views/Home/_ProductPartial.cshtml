@model IEnumerable<organic_store.Models.Products>

@if (!Model.Any())
{
    <p>Không có sản phẩm nào để hiển thị.</p>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card product-card h-100">
                    <div class="position-relative">
                        <span class="badge-discount">-@($"{new Random().Next(10, 40)}%")</span>
                        <img src="@item.HinhAnhURL" class="product-image" alt="@item.TenSP" onerror="this.src='/path/to/default-image.jpg'" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.TenSP</h5>
                        <p class="card-text text-muted">@item.MoTa</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="product-price">@String.Format("{0:N0}đ", item.GiaBan)</span>
                            </div>
                            <div>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star text-warning"></i>
                                <i class="fas fa-star-half-alt text-warning"></i>
                            </div>
                        </div>
                        <button class="btn btn-add-cart w-100 mt-3">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}