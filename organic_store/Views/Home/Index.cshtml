@model IEnumerable<organic_store.Models.Products>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/assets/css/home.css">
<link rel="stylesheet" href="~/assets/css/_Layout.css">
<style>
    .category-card:nth-child(1) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(2) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(3) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(4) .category-icon {
        color: #81c784;
    }
</style>

<!-- Slider -->
<div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/assets/Images/anh1_yfen0w.png" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption">
                <h3>Rau Sạch Tươi Ngon</h3>
                <p>Giao hàng nhanh chóng - An toàn - Chất lượng</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/Images/anh2_nhq106.png" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption">
                <h3>Khuyến Mãi Hấp Dẫn</h3>
                <p>Giảm giá lên đến 30% cho đơn hàng đầu tiên</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/Images/anh4_pggeza.png" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption">
                <h3>Nguồn Gốc Rõ Ràng</h3>
                <p>100% rau củ organic từ trang trại</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Categories -->
<section class="category-section">
    <div class="container">
        <h2 class="section-title">Danh Mục Sản Phẩm</h2>
        <div class="row g-4">
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-carrot"></i></div>
                    <h6>Rau Củ Tươi</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-apple-alt"></i></div>
                    <h6>Trái Cây</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-pepper-hot"></i></div>
                    <h6>Gia Vị Thiên Nhiên</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-seedling"></i></div>
                    <h6>Ngũ Cốc Hữu Cơ</h6>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products -->
<section class="container my-5">
    <h2 class="section-title">Tất Cả Sản Phẩm</h2>
    <div id="homeResult">
        @Html.Partial("_ProductPartial", Model)
    </div>

    @Html.Partial("_PaginationHome")
</section>

<script>
    // Auto slide carousel
    var carousel = new bootstrap.Carousel(document.getElementById('mainCarousel'), {
        interval: 3000,
        wrap: true
    });
</script>
@section Scripts {
    <script src="~/assets/js/live-search.js"></script>
}