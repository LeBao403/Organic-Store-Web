@model IEnumerable<organic_store.Models.Products>
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Ép kiểu ViewBag.Stores sang List<CuaHang> để sử dụng
    var stores = ViewBag.Stores as List<organic_store.Models.CuaHang>; 
    string selectedStore = ViewBag.SelectedStore;
}

<link rel="stylesheet" href="~/assets/css/home.css">
<link rel="stylesheet" href="~/assets/css/_Layout.css">
<style>
    .category-card:nth-child(1) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(2) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(3) .category-icon {
        color: #66bb6a;
    }

    .category-card:nth-child(4) .category-icon {
        color: #81c784;
    }
</style>

<div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/assets/Images/anh1_yfen0w.png" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption">
                <h3>Rau Sạch Tươi Ngon</h3>
                <p>Giao hàng nhanh chóng - An toàn - Chất lượng</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/Images/anh2_nhq106.png" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption">
                <h3>Khuyến Mãi Hấp Dẫn</h3>
                <p>Giảm giá lên đến 30% cho đơn hàng đầu tiên</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/assets/Images/anh4_pggeza.png" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption">
                <h3>Nguồn Gốc Rõ Ràng</h3>
                <p>100% rau củ organic từ trang trại</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<section class="category-section">
    <div class="container">
        <h2 class="section-title">Danh Mục Sản Phẩm</h2>
        <div class="row g-4">
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-carrot"></i></div>
                    <h6>Rau Củ Tươi</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-apple-alt"></i></div>
                    <h6>Trái Cây</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-pepper-hot"></i></div>
                    <h6>Gia Vị Thiên Nhiên</h6>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="category-card">
                    <div class="category-icon"><i class="fas fa-seedling"></i></div>
                    <h6>Ngũ Cốc Hữu Cơ</h6>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Tất Cả Sản Phẩm</h2>
        
        <div class="store-filter d-flex align-items-center">
            <label for="storeSelect" class="form-label mb-0 me-2 fw-bold">Xem sản phẩm tại:</label>
            <select id="storeSelect" class="form-select" style="width: 250px;" onchange="filterByStore(this.value)">
                <option value="ALL" @(selectedStore == "ALL" ? "selected" : "")>-- Tất cả Cửa hàng --</option>
                @if (stores != null)
                {
                    foreach (var store in stores)
                    {
                        <option value="@store.MaCH" @(selectedStore == store.MaCH ? "selected" : "")>
                            @store.DisplayName
                        </option>
                    }
                }
            </select>
        </div>
        </div>

    <div id="homeResult">
        @* Partial view hiển thị danh sách sản phẩm *@
        @Html.Partial("_ProductPartial", Model) 
    </div>

    @* Partial view phân trang *@
    @Html.Partial("_PaginationHome")
</section>

<script>
    function filterByStore(maCH) {
        window.location.href = '@Url.Action("Index", "Home")' + '?maCH=' + maCH;
    }
    
    // Auto slide carousel
    var carousel = new bootstrap.Carousel(document.getElementById('mainCarousel'), {
        interval: 3000,
        wrap: true
    });
</script>
@section Scripts {
    <script src="~/assets/js/live-search.js"></script>
    <script>
        // CẬP NHẬT LOGIC LIVE SEARCH: Đảm bảo gửi kèm MaCH
        $(document).ready(function () {
            // Cập nhật thuộc tính data-url của input search khi trang load
            // Điều này đảm bảo khi người dùng gõ tìm kiếm, MaCH hiện tại sẽ được gửi kèm
            $('.live-search').attr('data-url', function () {
                const maCH = $('#storeSelect').val() || 'ALL'; // Lấy MaCH hiện tại
                // Trả về URL tìm kiếm với MaCH đã được thêm vào
                return '@Url.Action("Search", "Home")?maCH=' + maCH;
            });
            
            // Xử lý khi giá trị dropdown thay đổi để cập nhật lại data-url
            $('#storeSelect').change(function() {
                const maCH = $(this).val();
                $('.live-search').attr('data-url', '@Url.Action("Search", "Home")?maCH=' + maCH);
            });
        });
    </script>
}